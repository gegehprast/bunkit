# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost
# HOST=0.0.0.0 // For testing, it's required to use 0.0.0.0 for some reason

# Database
DATABASE_URL=postgresql://localhost:5432/bunkit

# JWT Authentication
# Generate secure secrets with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-please-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars-please-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
# Use comma-separated list for multiple origins
# Example: http://localhost:3000,https://example.com
CORS_ORIGIN="http://localhost:5173,http://localhost:4173,http://localhost:3000,http://localhost:3001"

# HTTP Server Settings
# Maximum Request Body Size (in bytes)
MAX_REQUEST_BODY_SIZE=10485760

# Logging
# Options: error, warn, info, debug, trace
LOG_LEVEL=info

# Graceful Shutdown
SHUTDOWN_TIMEOUT_MS=10000
