                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/components/schemas/Todo"
                                        },
                                        "meta": {
                                            "type": "object",
                                            "properties": {
                                                "timestamp": {
