        "/api/todos": {
            "get": {
                "operationId": "listTodos",
                "summary": "List todos",
                "description": "Get all todos for the authenticated user",
                "tags": ["Todos"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "completed",
                        "schema": {
                            "description": "Filter todos by completion status",
                            "example": "true",
                            "type": "string",
                            "enum": ["true", "false"]
                        },
                        "description": "Filter todos by completion status"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Todo"
                                            }
                                        },
                                        "meta": {
                                            "type": "object",
                                            "properties": {
                                                "timestamp": {
