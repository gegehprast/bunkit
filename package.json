{
    "name": "bunkit",
    "version": "0.0.1",
    "type": "module",
    "private": true,
    "scripts": {
        "check": "bunx --bun biome check --write",
        "format": "bunx --bun biome format --write",
        "lint": "bun run scripts/lint.ts",
        "test": "bun run scripts/test.ts",

        "backend:dev": "bun --filter @apps/backend --elide-lines=0 dev",
        "backend:start": "bun --filter @apps/backend --elide-lines=0 start",
        "backend:typecheck": "cd apps/backend && bun run typecheck",
        "backend:db:generate": "bun --filter @apps/backend --elide-lines=0 db:generate",
        "backend:db:migrate": "bun --filter @apps/backend --elide-lines=0 db:migrate",
        "backend:db:studio": "bun --filter @apps/backend --elide-lines=0 db:studio",
        "backend:openapi:generate": "bun --filter @apps/backend --elide-lines=0 openapi:generate",
        "backend:openapi:generate:to-frontend": "bun --filter @apps/backend --elide-lines=0 openapi:generate --types --output=../../apps/frontend/src/generated",

        "frontend:dev": "bun --filter @apps/frontend --elide-lines=0 dev",
        "frontend:build": "bun --filter @apps/frontend --elide-lines=0 build",
        "frontend:preview": "bun --filter @apps/frontend --elide-lines=0 preview",
        "frontend:typecheck": "cd apps/frontend && bun run typecheck"
    },
    "workspaces": {
        "packages": [
            "apps/*",
            "packages/*"
        ],
        "catalog": {
            "@types/bun": "latest",
            "@types/node": "^24.10.1",
            "@types/react": "^19.2.0",
            "@types/react-dom": "^19.2.0",
            "typescript": "^5",
            "vite": "npm:rolldown-vite@7.2.5",
            "zod": "^4.1.11",
            "zod-openapi": "^5.4.5",
            "react": "^19.2.0",
            "react-dom": "^19.2.0",
            "@vitejs/plugin-react": "^5.0.4",
            "tailwindcss": "^4.1.18",
            "@tailwindcss/vite": "^4.1.18",
            "drizzle-orm": "^0.45.1",
            "drizzle-kit": "^0.31.8",
            "postgres": "^3.4.7",
            "@tanstack/react-query": "^5.90.12",
            "axios": "^1.13.2",
            "ky": "^1.14.1",
            "openapi-typescript": "^7.10.1",
            "jose": "^6.1.3",
            "openapi-fetch": "^0.15.0"
        },
        "catalogs": {
            "testing": {
                "jest": "30.0.0",
                "vitest": "^3.0.5",
                "testing-library": "14.0.0"
            }
        }
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.10",
        "@types/bun": "catalog:",
        "@types/node": "catalog:",
        "typescript": "catalog:"
    },
    "description": "BunKit - A production-ready fullstack monorepo starter kit for building modern web applications with Bun, featuring type-safe HTTP APIs, real-time WebSocket support, and automatic OpenAPI documentation generation.",
    "keywords": [
        "bun",
        "monorepo",
        "fullstack",
        "starter",
        "kit",
        "typescript",
        "react",
        "tailwindcss",
        "drizzle-orm",
        "openapi",
        "websockets"
    ]
}
